<section class="cart py-16">
    <% if (session.cart) { %>
        <div class="ordered container mx-auto w-1/2">
            <div class="flex items-center border-b border-gray-300 pb-4">
                <img src="/img/cart-black.png" alt="">
                <h1 class="font-bold mt-4 text-2xl">Order summary</h1>
            </div>
            <% for (const pizza of Object.values(session.cart.items)) { %>
                
            
            <div class="pizza-list flex items-center my-8">
    
                <img  class="w-24" src="/img/<%= pizza.item.image %>" alt="">
    
                <div class= "flex-1 ml-4">
                    <h1><%= pizza.item.name %></h1>
                    <span><%= pizza.item.size %></span>
                </div>
    
                <span class="flex-1"><%= pizza.qty %> Pcs</span>
                <span class="font-bold text-lg">₹<%= pizza.item.price * pizza.qty %></span>
            </div>
            <% } %>
            
            <hr>
            <div class="text-right  py-4">
                <div>
                    <span class="text-lg font-bold">Total Amount:</span>
                    <span class="amount text-2xl font-bold ml-2">₹<%= session.cart.totalPrice %></span>
                </div>
                <div>
                    <form action="" class="mt-12">
                        <input type="text" class="border border-gray-300 p-2 w-1/2 mb-4" placeholder="Phone Number">
                        <input type="text" class="border border-gray-300 p-2 w-1/2" placeholder="Adderss" 	>
                        <div>
                            <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6 " type="submit">
                                Order Now
                            </button>
                        </div>
                    </form>
                </div>
                <!-- <a href="" class="inline-block cursor-pointer px-6 btn-primary  py-2 rounded-full text-white font-bold mt-6 "> Login to continue </a> -->
            </div>
        </div>
    <% } else{ %> 
    <div class="empty-cart py-16">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-4">
                Cart Empty
            </h1>
            <p class="text-gray-500 text-lg mb-12">
                You probabbly haven't ordered a pizza yet. <br>
                TO Order a pizza , go to the main page.
            </p>
            <img src="/img/empty-cart.png" class="w-2/5 mx-auto" alt="empty-cart">
            <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go back</a>
        </div>
    </div>
    <% } %>
    



</section>